{
  "compilerOptions": { 
    "target": "es2016", 
    "module": "commonjs", 
    "rootDir": "./src", 
    // "baseUrl": "./", 
    // "rootDirs": [], 
    "outDir": "./dist", 
    "noEmitOnError": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,     
    "skipLibCheck": true, 
    "paths": { 
      "@Root/*": ["./src/*"],
      "@ErrorHandlers/*": ["./src/Errors/*"],
      "@Auth/*": ["./src/Auth/*"],
    }, 
  },
  "exclude": ["node_modules"]
}
